{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "baseUrl": "./",
    "module": "CommonJS",
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true
  },

  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/mocks/**/*.ts",
    "src/setup-jest.ts",
    "src/jest-polyfills.ts"
  ]
}
